<link rel="stylesheet" href="/stylesheets/profile.css">
<div class="main">
    <div class="image">
        {{#if user.additionalInfo}}
        <img src="/images/user/profile/{{user._id}}.jpg">
        {{else}}
       <img src="/images/user/profile/no_user.jpg">
        {{/if}}
    </div>
    <div class="name">
        <h1>{{user.username}}</h1>  
        </div>
        
<div class="data">
    
    {{!-- <p id="dob">{{user.username}}</p> --}}
    <p id="address">{{user.address}}</p>
    <p>{{user.email}}</p>
    <p>{{user.number}}</p>
    <p>{{user.workStatus}}</p>
    <p>{{user.skills}}</p>
    <p>{{user.education}}</p>
    {{!-- <iframe src="/images/user/resume/{{user._id}}.pdf"></iframe> --}}
    <a href="/images/user/resume/{{user._id}}.pdf" class="btn btn-primary" target="_blank">view resume</a>

    <a href="/update" class="btn btn-primary update">update</a>
</div>
</div>